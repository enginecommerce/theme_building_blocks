<div class="blog-index">
  {% comment %} TODO figure out where the featured post is coming from (theme setting?) {% endcomment %}
  <div class="hero-container content-header">
    {% for post in posts limit: 1 %}
      <div class="container featured-product">
        {% if post.instagram_post %}
          <div class="backsplash"style="background-image:url('{{ post.instagram_post.image_url }}')"></div>
        {% elsif post.youtube_post %}
          <div class="backsplash"style="background-image:url('{{ post.youtube_post.large_image_url }}')"></div>
        {% elsif post.product %}
          <div class="backsplash"style="background-image:url('{{ post.product.display_image_large_url }}')"></div>
        {% else %}
          <div class="backsplash"style="background-image:url('{{ post.main_image_large_url }}')"></div>
        {% endif %}
        <div class="content">
          <nav class="breadcrumb-link">
            <a href="/">Home</a>
            <a href="/blog">Blog</a>
            <a href="/blog/{{ post.category.path }}">{{ post.category.name }}</a>
          </nav>
          <hr>
          <h2 class="post-title">{{ post.title }}</h2>
          <p class="post-description">
            {{ post.description }}
          </p>
          <hr>
          <div class="post-meta d-flex align-items-center">
            <a href="{{ post.url }}" class="btn btn-secondary">Read More</a>
            <div class="published-at">{{ post.published_at | date: "%a, %b %d, %Y" }}</div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
  <div class="container">
    <div class='blog-list'>
      <div class="row">
        {% include "spree/shared/content_feed" %}
        {% include "spree/shared/content_feed_pagination" %}
        {% include "spree/shared/content_feed_count" %}
      </div>
    </div>
  </div>
</div>

<a class="product-block" data-product-id="{{ product.id }}" href="{{ product.path }}">
  <div class="row">
    <div class="col-12">
      <div class="product-img">
        <img src="{{ product.display_image_large_url }}" alt="{{ product.display_image_alt }}">
      </div>
    </div>
    <div class="col-12">
      <div class="product-details">
        <div class="row">
          <div class="col-lg-8">
            <div class="description">
              <h3>{{ product.name }}</h3>
              <p class="p-italic">{{ product.description | truncate: 100 }}</p>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="price">
              <h6>{{ product.price }}</h6>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</a>
